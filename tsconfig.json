{
  "include": ["src/**/*", "rollup.config.ts", "test/test.ts"],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2017",
    "moduleResolution": "NodeNext",
    "outDir": "./bin",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "node_modules",
  ]
}
